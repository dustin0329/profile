# = 自訂熱鍵 =

# == Alt ==

# - Alt + r : 清理當前視窗。 (C-a c)
bindkey "^[r" clear

# - Alt + s : 進入複製/捲動模式。 (C-a esc)
bindkey "^[s" copy

# - Alt + d : 將 screen 丟至背景執行。 (C-a d)
bindkey "^[d" detach

# - Alt + i : 顯示所有執行中的 screen。 (C-a *)
bindkey "^[i" displays

# - Alt + L : 將 screen 上鎖。 (C-a C-x)
bindkey "^[l" lockscreen

# === 分頁(Tab) ===

# - Alt + c : 新增子視窗。(C-a c)
bindkey "^[c" screen

# - Alt + s : 自訂當前視窗標題。 (C-a A)
bindkey "^[s" title

# - Alt + d : 關閉當前視窗。 (C-a k)
bindkey "^[d" kill

# - Alt + x/X : 切換至下個視窗。 (C-a n)
bindkey "^[x" next
bindkey "^[X" next

# - Alt + z/Z : 切換至上個視窗。 (C-a p)
bindkey "^[z" prev
bindkey "^[Z" prev

